NODE_ENV=development
PORT=4000

DATABASE_URL="postgresql://root:hostell%40123@localhost:5432/hostell?schema=public"

# Redis for queues
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Optional: more named definitions if you want to reference "short"/"medium"/"long"
# Throttler Configuration (values in milliseconds)
# Short tier: Burst protection (per second)
THROTTLER_SHORT_TTL=1000
THROTTLER_SHORT_LIMIT=10

# Medium tier: Normal rate limiting (per minute)
THROTTLER_MEDIUM_TTL=60000
THROTTLER_MEDIUM_LIMIT=100

# Long tier: Sustained usage protection (per hour)
THROTTLER_LONG_TTL=3600000
THROTTLER_LONG_LIMIT=1000

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (Google SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@cricketspirit.com

# File Upload Configuration
UPLOAD_MAX_SIZE=1048576
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,webp
UPLOAD_DIR=./uploads

# Invitation Expiry (in days)
TEAM_INVITATION_EXPIRY_DAYS=2
TOURNAMENT_INVITATION_EXPIRY_DAYS=7
MATCH_INVITATION_EXPIRY_DAYS=3

# Auto-accept invitations (for testing/dev environments)
# Set to 'true' to automatically accept all invitations without email consent
# Defaults to 'true' in development and test environments
AUTO_ACCEPT_INVITATIONS=false

# Match Configuration
MATCH_MIN_OVERS=2
MATCH_MAX_OVERS=50

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000
